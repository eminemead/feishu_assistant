{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "outDir": "./dist",
    "lib": ["ESNext"],
    "isolatedModules": true,
    "noEmitOnError": false,
    "maxNodeModuleJsDepth": 1,
    "assumeChangesOnlyAffectDirectDependencies": true,
    "preserveWatchOutput": true
  },
  "exclude": [
    "node_modules",
    "test",
    ".dspyground",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "include": [
    "server.ts",
    "lib/**/*"
  ]
}